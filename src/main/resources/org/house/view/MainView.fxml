<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="mainPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.house.projetjava8.ui.MainController">

    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Occupants" onAction="#handleShowOccupants"/>
            <Button text="Salles" onAction="#handleShowRooms"/>
            <Button text="Affectation" onAction="#handleShowAssignments"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane"/>
    </center>

</BorderPane>
