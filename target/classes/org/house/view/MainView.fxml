<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.house.projetjava8.ui.MainController">

    <left>
        <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <Button text="👤 Occupants" onAction="#handleShowOccupants"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
            <Button text="🏢 Salles" onAction="#handleShowRooms"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
            <Button text="🛏 Lits" onAction="#handleShowBeds"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
            <Button text="📅 Affectations" onAction="#handleShowAssignments"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
            <Button text="🤖 Auto-Affectation" onAction="#handleShowAutoAssign"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
            <Button text="📊 État du centre" onAction="#handleShowEtatCentre"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10 20;" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ECF0F1;">
            <VBox spacing="20" alignment="CENTER">
                <Label text="Bienvenue sur CY-SIAO"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                <Label text="Plateforme de gestion de l’hébergement d’urgence"
                       style="-fx-font-size: 16px; -fx-text-fill: #34495E;" />
                <ImageView fx:id="welcomeImage" fitWidth="300" fitHeight="200" preserveRatio="true"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
